@model IEnumerable<LanguageMakerWebProject.Models.WordModel>

@{
    ViewBag.Title = "Words";
}

<h2>Words</h2>

<p>
    @Html.ActionLink("Create New Word", "CreateWord")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClassificationId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pronounciation)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClassificationId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pronounciation)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditWord", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteWord", new { id=item.Id })
        </td>
    </tr>
}

</table>
